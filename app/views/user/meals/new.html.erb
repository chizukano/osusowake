<div class="container">
<h1>What are you cooking?</h1>
<h5>Let's add a new dish to your Osusowake list!</h5>
<%# use pundit to prevent non-chefs from making a meal %>
  <%= simple_form_for [@meal], url: user_chef_meal_path do |f| %>
    <%= f.input :name, placeholder: "Name of your dish", label: false %>
    <%= f.input :description, placeholder: "brief description of your dish", as: :text, label: false %>
    <%= f.input :photo, as: :file, label: false %>
    <%= f.submit "Add to your cookbook", class: "btn btn-success mb-3"  %>
  <% end %>
</div>
