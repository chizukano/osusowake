<div class="container mt-3">
  <h4>You just added <strong><%= @meals.last.name %></strong> on your dish list</h4>
  <h5>Now, let's schedule a cooking session!</h5>
<%# use pundit to prevent non-chefs from making a meal %>
  <%= simple_form_for [@cooking_session], url: user_chef_cooking_session_path do |f| %>
    <%= f.association :meal, collection: current_user.chef.meals, label: "Select a dish you're cooking" %>
    <%= f.input :max_portions, label: "Number of portions:" %>
    <%= f.input :end_at, label: "Will be prepared by" %>
<%# default format for simpleform is ugly. We might be able to use https://datetime-picker-input.herokuapp.com/ %>
    <%= f.submit "Done!", class: "btn btn-outline-success mb-3" %>
  <% end %>
</div>
