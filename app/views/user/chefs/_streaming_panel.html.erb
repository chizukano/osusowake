<div class="bg-white container px-3 py-2 mt-3">
  <h2 class="h6">
    <span class="badge badge-light border border-danger text-danger rounded-1">
      LIVE
    </span>
    NOW BROADCASTING <%= cooking_session.meal.name.upcase %>
  </h2>
  <div id="twitch-embed"></div>

  <!-- Load the Twitch embed JavaScript file -->
  <script src="https://embed.twitch.tv/embed/v1.js"></script>

  <!-- Create a Twitch.Embed object that will render within the "twitch-embed" element -->
  <script type="text/javascript">
    new Twitch.Embed("twitch-embed", {
      width: "100%",
      height: 400,
      channel: "<%= cooking_session.chef.twitch_channel %>",
      // Only needed if this page is going to be embedded on other websites
      parent: ["embed.example.com", "othersite.example.com"]
    });
  </script>
</div>
