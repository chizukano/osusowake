<div class="container d-flex justify-content-center">
  <h1 class="mt-3">Welcome <strong><%= @chef.user.username %></h1>
</div>
<div class="container">
  <% if @chef.meals.exists? %>
  <h3>Your Meals</h3>
  <ul class="list-unstyled">
    <% @chef.meals.each do |meal| %>
      <li><%= meal.name %></li>
      <li>Cooked <%= meal.cooking_sessions.count %> times</li>
    <% end %>
  </ul>
  <% end %>
</div>
