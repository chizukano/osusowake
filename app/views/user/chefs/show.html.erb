<div class="container d-flex justify-content-center">
  <h1 class="mt-3 mb-3">Welcome <strong><%= @chef.user.username %></h1>
</div>
<hr>
<div class="container mb-3">
<%# show current and upcoming reservations on each cooking session %>
  <h3>What's Cooking?</h3>
  <% @chef.meals.each do |meal| %>
    <% if meal.cooking_sessions.exists? %>
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title"><%= meal.name %></h5>
          <h6>Pickup in <strong><%= rand(2..10) %></strong> hours</h6>
          <h6><strong><%= rand(2..10) %></strong> of 10 portions reserved</h6>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="container mb-3">
  <% if @chef.meals.exists? %>
    <h3>Your Meals</h3>
    <% @chef.meals.each do |meal| %>
      <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title"><%= meal.name %></h5>
        <h6>Cooked <%= meal.cooking_sessions.count %> times</h6>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
<div class="container">
<ul class="list-unstyled">
  <li>
    <%= link_to "Add a new dish", new_user_chef_meal_path, class: "btn btn-success mt-1" %>
    <%= link_to "Schedule a cooking", new_user_chef_cooking_session_path, class: "btn btn-success mt-1" %>
  </li>
  <li><%= link_to "Your profile page", user_chef_path, class: "btn btn-success mt-1" %></li>
  <li><%= link_to "Explore dishes from other chefs!", cooking_sessions_path, class: "btn btn-outline-success mt-1" %></li>
</ul>
</div>
