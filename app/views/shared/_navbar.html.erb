<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">
      <%= link_to root_path, class: "navbar-brand d-flex flex-row mx-2" do %>
        <%= image_tag "folk-logo-white.png", alt: "osusowake", width:40, height: 40, class: "m-1" %>
        <h2 class="text-white m-2"><strong>OSUSOWAKE</strong></h2>
      <% end %>

    <%= render "shared/refine_location" if action_name == "index" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "What is OSUSOWAKE?", "/", class: "btn btn-success m-2" %>
        </li>
        <li class="nav-item">
          <%= link_to "How it works", "/", class: "btn btn-success m-2" %>
        </li>
        <% if user_signed_in? %>
          <% if current_user.chef.present? %>
            <li class="nav-item me-2">
              <%= link_to "Chef's Table", "/user/chef/", class: "btn btn-success m-2" %>
            </li>
          <% else %>
            <li class="nav-item me-2">
              <%= link_to "Become a Chef!", "/user/chef/new", class: "btn btn-success m-2" %>
            </li>
          <% end %>
            <li class="nav-item dropdown">
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "nav-link text-info" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link text-info" %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
