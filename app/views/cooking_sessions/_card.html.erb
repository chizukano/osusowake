<%= link_to cooking_session, class: "card mb-3 text-decoration-none text-black" do %>
  <div class="pos-r">
    <%# <%= cl_image_tag cooking_session.meal.photo.key, class: "card-img-top", crop: :fill %> %>
  </div>
  <div class="card-body fs-6 ">
    <h5 class="card-title"><%= cooking_session.meal.name %></h5>
    <p class="card-text">by <%= cooking_session.chef_name %></p>
    <p class="card-text mb-0 ">Ready in <%= distance_of_time_in_words_to_now(cooking_session.end_at) %></p>
    <% if session[:search_result].present? %>
      <p class="card-text">
        <%= cooking_session.distance_to(session[:search_result]).round(2) %><span class="small text-muted">km away</span>
      </p>
    <% end %>
  </div>
  <div class="progress mt-3" style="1rem">
    <div class="progress-bar progress-bar bg-success fs-3" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    <div class="text-end flex-grow-1">
      <%= cooking_session.max_portions %> <span class="small  me-2">portions left</span>
    </div>
  </div>
<% end %>
