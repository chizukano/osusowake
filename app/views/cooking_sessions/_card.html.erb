<div class="card mb-3">
  <div class="pos-r">
    <img class="card-img-top" src="https://place-hold.it/215x150" alt="Meal">
  </div>
  <div class="card-body fs-6 ">
    <p class="card-text mb-0 ">Ready in <%= distance_of_time_in_words_to_now(cooking_session.end_at) %></p>
    <% if @search_result.present? %>
      <p class="card-text">
        <%= cooking_session.distance_to(@search_result).round(2) %><span class="small text-muted">km away</span>
      </p>
    <% end  %>
  </div>
  <div class="progress mt-3" style="1rem">
    <div class="progress-bar progress-bar bg-success fs-3" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    <div class="text-end flex-grow-1">
      <%= cooking_session.max_portions %> <span class=" small">portions left</span>
    </div>
  </div>
</div>
