<div class="container py-3">
  <h4 class="text-left mb-3 h2"><strong>Ready in a few hours!</strong></h4>
  <div class="row">
    <% @cooking_sessions.not_from(current_user&.chef).upcoming.limit(8).each do |cooking_session| %>
        <div class="col-3 mb-3">
          <%= render "cooking_sessions/card", cooking_session: cooking_session %>
        </div>
    <% end %>
  </div>
  <h4 class="text-left mb-3 h2"><strong>Check out other meals your neighbors are cooking!</strong></h4>
  <div class="row">
    <% @cooking_sessions_near.not_from(current_user&.chef).each do |cooking_session| %>
      <div class="col-4 mb-3">
        <%= render "cooking_sessions/card", cooking_session: cooking_session %>
      </div>
    <% end %>
  </div>
</div>
